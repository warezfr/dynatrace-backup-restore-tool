# Dynatrace Backup Manager - Configuration

# Backend API
API_HOST=127.0.0.1
API_PORT=8000
DEBUG=false

# Database
DATABASE_URL=sqlite:///dynatrace_backup.db

# Dynatrace Managed (configure in UI)
DYNATRACE_ENVIRONMENT_URL=
DYNATRACE_API_TOKEN=
DYNATRACE_INSECURE_SSL=false

# Monaco CLI (included in application)
MONACO_CLI_PATH=./bin/monaco.exe
MONACO_TIMEOUT=300

# Backups
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# Scheduler
SCHEDULER_ENABLED=true

# Security
SECRET_KEY=change-me-in-production
